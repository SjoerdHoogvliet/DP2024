<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/ovchip</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">hoi</property>
        <!-- Enable this to show queries generated by Hibernate -->
<!--        <property name="show_sql">true</property>-->
<!--        <property name="format_sql">true</property>-->

        <mapping class="Adres"/>
        <mapping class="Reiziger"/>
        <mapping class="OVChipkaart"/>
    </session-factory>
</hibernate-configuration>